    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:background="#008080"
                        android:text="ABOUT"
                        android:textColor="#ffffff"
                        android:textSize="15dip"
                        android:textStyle="bold"

                        />

                </LinearLayout>


            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="This app was developed by S.Kulasekar, B.Harishkumar and Saurabh Tripathi  with the guidance of Dr.S.V.Sudha (HOD) and Mr.D.Daniel(AP) of Dr.NGP Institute of Technology In association with Aosta software technologies  India  limited,Coimbatore." />
                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="15dp"
                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:background="#008080"
                        android:text="HELP"
                        android:textColor="#ffffff"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Search Stories: Search your stories and find the best story for your kids." />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/text1"
                        android:text="Your Story: Copy the story from Search Stories or Write your own stories and click the play button to play the story. You can also save, retrieve and delete the story ." />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="AV Story: It has a half dozen of Youtube videos for your kids and it plays only one story at a time." />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Hidden game: At the main screen there is an icon at the bottom which is a learn and play game for your kid ." />



                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:background="#008080"
                        android:text="YOUR STORY"
                        android:textColor="#ffffff"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Your story" />

                </LinearLayout>


            </TableRow>

        </TableLayout>
    </ScrollView>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/BtnImg"
                android:layout_width="wrap_content"
                android:layout_height="80dp"

                android:layout_alignLeft="@+id/BtnHelp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/BtnHelp"
                android:layout_below="@+id/BtnHelp"
                android:layout_weight="1"
                android:background="@drawable/bg" />

        </TableRow>

    </TableLayout>


